[tox]
envlist = pytest, black

[testenv:pytest]
deps = 
    matplotlib
    numpy
    pytest
    pytest-cov
commands =
    pytest --cov=alpaca
    coverage html

[testenv:black]
deps =
    black
commands =
    black --verbose --check --diff @PROJECT_SOURCE_DIR@/python/alpaca/ @PROJECT_SOURCE_DIR@/python/test/
